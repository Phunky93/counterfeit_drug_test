<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back11"
    tools:context=".LoginPage">

    <androidx.cardview.widget.CardView

        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:background="@drawable/newstyle"
        card_view:cardBackgroundColor="@color/light_purple"
        android:layout_gravity="center"

        android:layout_width="350dp"
        android:paddingBottom="30dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Welcome,"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textColor="@color/blue"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/txt1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Login Here..."
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:textColor="@color/blue"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/username"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/newstyle"
                android:ems="10"
                android:hint="Enter username"
                android:inputType="textPersonName"
                android:text=""
                android:gravity="center"
                />

            <EditText
                android:id="@+id/password"
                android:layout_marginTop="20dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/newstyle"
                android:ems="10"
                android:hint="Enter password"
                android:inputType="textPassword"
                android:gravity="center"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Sign in"
                android:background="@drawable/rounded_signup"
                android:textColor="@color/white"
                android:id="@+id/log"
                android:layout_marginBottom="30dp"></androidx.appcompat.widget.AppCompatButton>

            <TextView
                android:id="@+id/txt2"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="26dp"
                android:text="Click here to Register ->"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:textColor="@color/reglink"
                android:textSize="20dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>


