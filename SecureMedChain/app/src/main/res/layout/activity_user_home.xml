<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_home">

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/atrnm"
            android:paddingTop="20dp"
            android:text="Welcome Customer"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:gravity="top|center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"
            android:background="@drawable/rounded_corner"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dlayout3"
        tools:openDrawer="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="100dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:background="@drawable/customer_home"
                android:layout_marginBottom="20dp">
            </TextView>


        </LinearLayout>


        <FrameLayout
            android:id="@+id/fragmentcont_admin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/botnav_admin"/>


        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/nav"
            android:background="@drawable/back12"
            android:layout_gravity="start"
            android:layout_marginTop="-40dp"
            app:headerLayout="@layout/topbar"
            app:menu="@menu/user_menu"/>

    </androidx.drawerlayout.widget.DrawerLayout>

</RelativeLayout>

