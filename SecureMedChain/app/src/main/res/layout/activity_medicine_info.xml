<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Medicine_info">

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dlayout3"
        tools:openDrawer="start">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/atrnm"
                    android:paddingTop="20dp"
                    android:text="Medicine Details"
                    android:textSize="24dp"
                    android:textColor="@color/white"
                    android:gravity="top|center"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/rounded_corner"
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />

            <androidx.cardview.widget.CardView

                android:id="@+id/card_view"
                android:layout_gravity="center"
                android:layout_width="400dp"
                android:paddingBottom="10dp"
                card_view:cardBackgroundColor="@color/light_purple"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="18dp">

                <LinearLayout
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="135dp"
                            android:text="Medicine Name : "
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_height="30dp"/>


                        <TextView
                            android:id="@+id/med_name"
                            android:layout_width="150dp"
                            android:text="med_name"
                            android:textSize="16dp"
                            android:layout_height="30dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="135dp"
                            android:text="Ingredients : "
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_height="30dp"/>


                        <TextView
                            android:id="@+id/ingredients"
                            android:layout_width="150dp"
                            android:text="ingredients"
                            android:textSize="16dp"
                            android:layout_height="30dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="135dp"
                            android:text="Expiry Date : "
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:layout_height="30dp"/>

                        <TextView
                            android:id="@+id/exp_date"
                            android:layout_width="150dp"
                            android:text="exp_date"
                            android:textSize="16dp"
                            android:layout_height="30dp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="135dp"
                            android:text="Available Quantity : "
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:layout_height="30dp"/>

                        <TextView
                            android:id="@+id/avail_quantity"
                            android:layout_width="150dp"
                            android:text="avail_quantity"
                            android:textSize="16dp"
                            android:layout_height="30dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingTop="10dp">

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/m_id"
                            android:layout_width="wrap_content"
                            android:text="1"
                            android:textSize="10dp"
                            android:layout_height="20dp"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="140dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:text="Buy"
                            android:background="@drawable/rounded_signup"
                            android:textColor="@color/white"
                            android:id="@+id/buy"
                            android:layout_marginBottom="3dp"></androidx.appcompat.widget.AppCompatButton>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragmentcont_admin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/botnav_admin"/>


        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/nav"
            android:background="@drawable/back12"
            android:layout_gravity="start"
            android:layout_marginTop="-40dp"
            app:headerLayout="@layout/topbar"
            app:menu="@menu/user_menu" />

    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.appcompat.widget.LinearLayoutCompat>